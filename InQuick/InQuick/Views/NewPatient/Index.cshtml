
@{
    ViewData["Title"] = "New Patient";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<hr />

<form>

    <!-- Date of Consultation -->
    <div class="col-md-6 form-group form-group-lg">
        <label for="consultation-date" class="col-xs-4 control-label">Date of Consultation:</label>
        <div class="col-xs-8">
            <input type="date" class="form-control" id="consultation-date" />
        </div>
    </div>

    <!-- Name of Doctor -->
    <div class="col-md-6 form-group form-group-lg">
        <label for="doctor-name" class="col-xs-4 control-label">Name of Doctor:</label>
        <div class="col-xs-8">
            <input type="text" class="form-control" id="doctor-name" placeholder="Jane Doe" />
        </div>
    </div>

    <!-- Referred By -->
    <div class="col-md-6 form-group form-group-lg">
        <label for="referred-by" class="col-xs-4 control-label">Referred By:</label>
        <div class="col-xs-8">
            <input type="text" class="form-control" id="referred-by" placeholder="John Doe" />
        </div>
    </div>

    <!-- Case Type -->
    <div class="col-md-6 form-group form-group-lg">
        <label for="case-type" class="col-xs-4 control-label">Case Type:</label>
        <div class="col-xs-8">
            <input type="text" class="form-control" id="case-type" placeholder="?" />
        </div>
    </div>

    <!-- Details of Injury or Illness -->
    <div class="col-md-6 form-group form-group-lg">
        <label for="problem-details" class="col-xs-4 control-label">Details of Injury or Illness:</label>
        <div class="col-xs-8">
            <textarea class="form-control" id="problem-details" rows="3" placeholder="Include date, location, and other details."></textarea>
        </div>
    </div>

    <!-- Details of Treatment Administered -->
    <div class="col-md-6 form-group form-group-lg">
        <label for="previous-treatment" class="col-xs-4 control-label">Details of Treatment Administered:</label>
        <div class="col-xs-8">
            <textarea class="form-control" id="previous-treatment" rows="3" placeholder="?"></textarea>
        </div>
    </div>

    <!-- Accordion -->
    <div class="panel-group" id="new-patient-accordion" role="tablist" aria-multiselectable="true">

        <!-- Registration Details -->
        <div class="panel panel-default">
            <div class="panel-heading" role="tab" id="registration-heading" data-toggle="collapse" data-parent="#new-patient-accordion" href="#registration-details">
                <h4 class="panel-title">Patient Registration Details</h4>
            </div>
            <div id="registration-details" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="registration-heading">

                <div class="panel-body">

                    <fieldset>

                        <!-- Name -->
                        <div class="col-md-6 form-group form-group-lg">
                            <label for="patient-name" class="col-xs-4 control-label">Name:</label>
                            <div class="col-xs-8">
                                <input type="text" class="form-control" id="patient-name" />
                            </div>
                        </div>

                        <!-- SSN -->
                        <div class="col-md-6 form-group form-group-lg">
                            <label for="patient-ssn" class="col-xs-4 control-label">SSN:</label>
                            <div class="col-xs-8">
                                <input type="text" class="form-control" id="patient-ssn" />
                            </div>
                        </div>

                        <!-- Address -->
                        <div class="col-md-6 form-group form-group-lg">
                            <label for="patient-street" class="col-xs-4 control-label">Address:</label>
                            <div class="col-xs-8">
                                <input type="text" class="form-control" id="patient-street" />
                            </div>
                        </div>

                        <!-- City -->
                        <div class="col-md-6 form-group form-group-lg">
                            <label for="patient-city" class="col-xs-4 control-label">City:</label>
                            <div class="col-xs-8">
                                <input type="text" class="form-control" id="patient-city" />
                            </div>
                        </div>

                        <!-- State -->
                        <div class="col-md-6 form-group form-group-lg">
                            <label for="patient-state" class="col-xs-4 control-label">State:</label>
                            <div class="col-xs-8">
                                <input type="text" class="form-control" id="patient-state" />
                            </div>
                        </div>

                        <!-- ZIP -->
                        <div class="col-md-6 form-group form-group-lg">
                            <label for="patient-zip" class="col-xs-4 control-label">ZIP:</label>
                            <div class="col-xs-8">
                                <input type="text" class="form-control" id="patient-zip" />
                            </div>
                        </div>

                        <!-- Mobile # -->
                        <div class="col-md-6 form-group form-group-lg">
                            <label for="patient-mobile" class="col-xs-4 control-label">Mobile #:</label>
                            <div class="col-xs-8">
                                <input type="tel" class="form-control" id="patient-mobile" />
                            </div>
                        </div>

                        <!-- Home # -->
                        <div class="col-md-6 form-group form-group-lg">
                            <label for="patient-home" class="col-xs-4 control-label">Home #:</label>
                            <div class="col-xs-8">
                                <input type="tel" class="form-control" id="patient-home" />
                            </div>
                        </div>

                        <!-- Work # -->
