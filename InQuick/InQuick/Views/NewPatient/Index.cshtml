                            <label for="patient-email" class="col-xs-4 control-label">Email:</label>
                            <div class="col-xs-8">
                                <input type="tel" class="form-control" id="patient-email" />
                            </div>
                        </div>

                        <!-- Notes & Comments -->
                        <div class="col-md-6 form-group form-group-lg">
                            <label for="notes-comments" class="col-xs-4 control-label">Notes & Comments:</label>
                            <div class="col-xs-8">
                                <textarea class="form-control" id="notes-comments" rows="3" placeholder="?"></textarea>
                            </div>
                        </div>

                        <!-- Instructions -->
                        <div class="col-md-6 form-group form-group-lg">
                            <label for="instructions" class="col-xs-4 control-label">Instructions:</label>
                            <div class="col-xs-8 text-left" id="instructions">
                                <div class="checkbox">
                                    <label><input type="checkbox" value="">Pre-visit instructions and directions provided.</label>
                                </div>
                                <div class="checkbox">
                                    <label><input type="checkbox" value="">Applicable records and reports acquired.</label>
                                </div>
                                <div class="checkbox">
                                    <label><input type="checkbox" value="">Appointment date and time confirmed.</label>
                                </div>
                                <div class="checkbox">
                                    <label><input type="checkbox" value="">Insurance pre-authorization completed (if required).</label>
                                </div>
                            </div>
                        </div>

                    </fieldset>

